@model FastEngSite.Controllers.MainPageData
@{
    ViewBag.Title = "FORUM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper" class="container">

    <div class="mainheader">
        @Html.Partial("~/Views/ViewAccountMenu.cshtml")

        <div class="searchblock">
            <input type="text" class="searchTerm" placeholder="Search...">
            <button type="submit" class="searchicon" style="border: 0; background: transparent; display: inline-block">
                <img src="images/searchicon.png" width="20" height="20" alt="submit" /></button>
        </div>

        <div class="navigation">
            @Html.Partial("~/Views/MenuNavigation.cshtml")
        </div>

    </div>
</div>

<div class="container top100 bottom50">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1 style="margin-left: 150px">COMING SOON!</h1>
            <img src="~/Images/ComingSoon.jpg">
            <h2 style="margin-left: 50px">fastengineeringanalysis.com forum</h2>
            <p>Members can ask questions, post solutions and offer advice to other users on how to get the best from the site. Industrial & Academic professionals will host blogs on various fields of technology. Career opportunities, Educational information and much more.</p>
        </div>
    </div>
</div>

<div class="mainfooter">

    <div class="navigation2">
        @Html.Partial("~/Views/MenuNavigation.cshtml")
    </div>

    <div class="bottomfooter">
        <div class="footerleft">
            <p>Terms & Conditions</p>
            <br>
            <p>
                Terms and conditions apply to all purchases
                    <br>
                for full details please <a href="#">Read Now</a>
            </p>
            <br>
            <br>
            @Html.Partial("~/Views/Copyright.cshtml")
        </div>
        <div class="footerright">
            @Html.Partial("~/Views/SocialLinks.cshtml")
        </div>
    </div>
</div>


@Html.Partial("~/Views/CommonPage.cshtml")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/plugins")
<script src="/Scripts/PureJs/jquery.horizontal.scroll.js" type="text/javascript"></script>

@Scripts.Render("~/js")

